<html>
<body>
  <% if (action === 'create_card') { %>
    <h1>クレジットカード登録 (No. <%= card_id %>)</h1>
  <% } else { %>
    <h1>クレジットカード更新 (No. <%= card_id %>)</h1>
  <% } %>

  <form method="post" action="/<%= action %>/<%= card_id %>">
    <label>クレジットカード番号</label>
    <input type="text" name="cardno" pattern="[0-9]*">
    <br>
    <label>有効期限</label>
    <select name="month">
      <% for (i = 1; i <= 12; i++) { %>
        <option value="<%= ('0' + i).slice(-2) %>"><%= ('0' + i).slice(-2) %></option>
      <% } %>
    </select>
    /
    <select name="year">
      <% for (i = 2017; i <= 2029; i++) { %>
        <option value="<%= i %>"><%= i %></option>
      <% } %>
    </select>
    <br>
    <label>セキュリティコード</label>
    <input type="number" name="seccode" pattern="[0-9]*">
    <br>
    <input type="submit" value="登録">
  </form>
</body>
</html>
